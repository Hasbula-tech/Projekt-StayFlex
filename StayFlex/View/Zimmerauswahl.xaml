<UserControl x:Class="StayFlex.View.Zimmerauswahl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="StayFlex.View"
             Width="300" Height="200">

  <Border Background="#2C3E50" CornerRadius="10" BorderBrush="#3498DB" BorderThickness="2" Padding="10">
        <StackPanel>
            <TextBlock Text="Zimmer auswählen" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- Zimmeroptionen -->
            <ListBox x:Name="ZimmerListBox" FontSize="16" Margin="0,30,0,0">
                <ListBoxItem Content="Einzelzimmer" Selected="ListBoxItem_Selected"/>
                <ListBoxItem Content="Doppelzimmer"/>
            </ListBox>

            <!-- Bestätigungsbutton -->
                <Button Content="Bestätigen" FontSize="16" Background="Orange" Foreground="Black" 
                    Click="CloseZimmerAuswahl" HorizontalAlignment="Center" Width="100" Margin="0,10,0,0"/>
    </StackPanel>
    </Border>
</UserControl>
