<UserControl x:Class="StayFlex2.View.Zimmerauswahl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="StayFlex2.View"
             Width="300" Height="200">

  <Border Background="#2C3E50" CornerRadius="10" BorderBrush="#3498DB" BorderThickness="2" Padding="10">
        <StackPanel>
            <TextBlock Text="Zimmer auswählen" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- Zimmeroptionen -->
            <ListBox x:Name="ZimmerListBox" FontSize="16">
                <ListBoxItem Content="Einzelzimmer"/>
                <ListBoxItem Content="Doppelzimmer"/>
                <ListBoxItem Content="Suite"/>
                <ListBoxItem Content="Familienzimmer"/>
            </ListBox>

            <!-- Bestätigungsbutton -->
            <Button Content="Auswahl bestätigen" Background="#3498DB" Foreground="White" Margin="0,10,0,0" Padding="5"
                    />
        </StackPanel>
    </Border>
</UserControl>
